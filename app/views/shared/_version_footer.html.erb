<%# Version footer showing current version and update availability %>
<% version_info = VersionService.call %>
<footer class="glass-footer px-5 py-3 text-xs text-gray-600 flex items-center justify-between flex-wrap gap-2">
  <div class="flex items-center gap-2">
    <span>Version: <code class="bg-white/30 px-1.5 py-0.5 rounded"><%= version_info[:current] %></code></span>
  </div>

  <% if version_info[:update_available] %>
    <div class="flex items-center gap-2">
      <span class="text-red-600 font-medium flex items-center gap-1">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
        Update available: <%= version_info[:latest] %>
      </span>
      <%= link_to "View release", "https://github.com/WITCodingClub/calendar-backend/releases/tag/#{version_info[:latest]}",
          target: "_blank",
          rel: "noopener",
          class: "text-blue-600 hover:underline" %>
    </div>
  <% end %>
</footer>
