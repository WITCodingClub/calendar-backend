<%
  categories = Admin::NavigationRegistry.categories_for(current_user)
  current_path = request.path
%>

<!-- Sidebar for desktop -->
<aside
  class="hidden lg:flex lg:flex-col lg:w-64 lg:fixed lg:top-4 lg:bottom-4 lg:left-4 bg-white/80 backdrop-blur-md border border-white/20 rounded-2xl shadow-2xl z-50"
  data-controller="sidebar"
  style="box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);"
>
  <!-- Sidebar header -->
  <div class="flex items-center justify-between px-4 py-4 border-b border-white/20">
    <a href="<%= admin_root_path %>" class="flex items-center space-x-2">
      <div class="w-8 h-8 bg-gradient-to-br from-red-500 to-red-700 rounded-lg flex items-center justify-center">
        <span class="text-white font-bold text-sm">WIT</span>
      </div>
      <span class="font-semibold text-gray-900">Admin</span>
    </a>
  </div>

  <!-- Navigation -->
  <nav class="flex-1 px-3 py-4 space-y-1 overflow-y-auto">
    <% categories.each do |category| %>
      <div class="mb-4" data-controller="sidebar-category" data-category-id="<%= category[:id] %>">
        <!-- Category header -->
        <button
          type="button"
          data-action="click->sidebar-category#toggle"
          class="w-full flex items-center justify-between px-3 py-2 text-sm font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50 rounded-lg transition"
        >
          <span><%= category[:title] %></span>
          <svg class="w-4 h-4 transition-transform" data-sidebar-category-target="chevron" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>

        <!-- Category items -->
        <div class="ml-3 mt-1 space-y-1" data-sidebar-category-target="items">
          <% category[:items].each do |item| %>
            <%
              # Handle both symbol route helpers and string paths
              item_url = begin
                if item[:path].is_a?(Symbol)
                  send(item[:path])
                else
                  item[:path]
                end
              rescue
                '#'
              end

              is_active = current_path == item_url
              active_classes = "bg-red-50 text-red-700 border-l-4 border-red-700"
              inactive_classes = "text-gray-600 hover:bg-gray-50 hover:text-gray-900 border-l-4 border-transparent"
            %>
            <a
              href="<%= item_url %>"
              class="flex items-center justify-between px-3 py-2 text-sm rounded-r-lg transition <%= is_active ? active_classes : inactive_classes %>"
              title="<%= item[:description] %>"
            >
              <span><%= item[:title] %></span>
              <% if item[:read_only] %>
                <span class="text-xs text-gray-400">üëÅ</span>
              <% end %>
            </a>

            <!-- Actions submenu if present -->
            <% if item[:actions].present? %>
              <div class="ml-6 space-y-1">
                <% item[:actions].each do |action| %>
                  <%
                    action_url = begin
                      if action[:path].is_a?(Symbol)
                        send(action[:path])
                      else
                        action[:path]
                      end
                    rescue
                      nil
                    end
                  %>
                  <% if action_url %>
                    <a
                      href="<%= action_url %>"
                      class="block px-3 py-1.5 text-xs text-gray-500 hover:text-gray-700 rounded-lg transition"
                      data-turbo-method="<%= action[:method] || 'get' %>"
                    >
                      <%= action[:title] %>
                    </a>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </nav>

  <!-- Sidebar footer -->
  <div class="px-4 py-3 border-t border-white/20">
    <div class="flex items-center space-x-3">
      <div class="w-8 h-8 bg-gray-200 rounded-full flex items-center justify-center flex-shrink-0">
        <span class="text-gray-600 font-medium text-xs">
          <%= current_user.first_name&.first || "?" %><%= current_user.last_name&.first || "?" %>
        </span>
      </div>
      <div class="flex-1 min-w-0">
        <p class="text-sm font-medium text-gray-900 truncate">
          <%= current_user.email %>
        </p>
        <p class="text-xs text-gray-500 capitalize">
          <%= current_user.access_level.to_s.tr("_", " ") %>
        </p>
      </div>
    </div>
  </div>
</aside>

<!-- Mobile sidebar overlay -->
<div
  class="lg:hidden fixed inset-0 bg-gray-900 bg-opacity-50 z-40 hidden"
  data-sidebar-target="overlay"
  data-action="click->sidebar#closeMobile"
></div>

<!-- Mobile sidebar drawer -->
<aside
  class="lg:hidden fixed inset-y-0 left-0 w-64 bg-white border-r border-gray-200 z-50 transform -translate-x-full transition-transform"
  data-sidebar-target="drawer"
>
  <!-- Same header content -->
  <div class="flex items-center justify-between px-4 py-4 border-b border-gray-200">
    <a href="<%= admin_root_path %>" class="flex items-center space-x-2">
      <div class="w-8 h-8 bg-gradient-to-br from-red-500 to-red-700 rounded-lg flex items-center justify-center">
        <span class="text-white font-bold text-sm">WIT</span>
      </div>
      <span class="font-semibold text-gray-900">Admin</span>
    </a>
    <button
      type="button"
      data-action="click->sidebar#closeMobile"
      class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg transition"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>

  <!-- Same navigation content for mobile -->
  <nav class="flex-1 px-3 py-4 space-y-1 overflow-y-auto">
    <% categories.each do |category| %>
      <div class="mb-4">
        <h3 class="px-3 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wider">
          <%= category[:title] %>
        </h3>
        <div class="mt-1 space-y-1">
          <% category[:items].each do |item| %>
            <%
              item_url = begin
                if item[:path].is_a?(Symbol)
                  send(item[:path])
                else
                  item[:path]
                end
              rescue
                '#'
              end

              is_active = current_path == item_url
              active_classes = "bg-red-50 text-red-700"
              inactive_classes = "text-gray-600 hover:bg-gray-50 hover:text-gray-900"
            %>
            <a
              href="<%= item_url %>"
              class="flex items-center justify-between px-3 py-2 text-sm rounded-lg transition <%= is_active ? active_classes : inactive_classes %>"
              data-action="click->sidebar#closeMobile"
            >
              <span><%= item[:title] %></span>
            </a>
          <% end %>
        </div>
      </div>
    <% end %>
  </nav>
</aside>

<!-- Mobile header with hamburger -->
<header class="lg:hidden bg-white border-b border-gray-200 px-4 py-3 flex items-center justify-between sticky top-0 z-30">
  <button
    type="button"
    data-action="click->sidebar#openMobile"
    class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg transition"
  >
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
    </svg>
  </button>
  <div class="flex items-center space-x-2">
    <div class="w-8 h-8 bg-gradient-to-br from-red-500 to-red-700 rounded-lg flex items-center justify-center">
      <span class="text-white font-bold text-sm">WIT</span>
    </div>
    <span class="font-semibold text-gray-900">Admin</span>
  </div>
  <div class="w-10"></div> <!-- Spacer for centering -->
</header>
