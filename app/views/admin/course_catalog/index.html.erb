<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "← Back to Admin", admin_root_path, class: "text-sm font-medium hover:underline", style: "color: #d13732;" %>
  </div>

  <h1 class="text-2xl font-bold mb-2">Course Catalog Import</h1>
  <p class="text-gray-600 mb-6">Import course data from LeopardWeb for each term. Terms marked as "Not in DB" need to be provisioned first.</p>

  <div class="shadow-lg rounded-lg overflow-hidden" style="background: rgba(255, 255, 255, 0.6); backdrop-filter: blur(5px); -webkit-backdrop-filter: blur(5px); border: 1px solid rgba(209, 55, 50, 0.3);">
    <table class="min-w-full divide-y divide-gray-200">
      <thead style="background: rgba(209, 55, 50, 0.1);">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Term</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Term Code</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Source</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Import Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @combined_terms.each do |term_data| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="font-medium text-gray-900"><%= term_data[:description] %></span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <code class="text-sm bg-gray-100 px-2 py-1 rounded"><%= term_data[:uid] %></code>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if term_data[:in_database] && term_data[:from_api] %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  In DB + API
                </span>
              <% elsif term_data[:in_database] %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  In DB only
                </span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                  API only (not in DB)
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if term_data[:db_term]&.catalog_imported? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  Imported <%= time_ago_in_words(term_data[:db_term].catalog_imported_at) %> ago
                </span>
              <% elsif term_data[:in_database] %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
                  Not imported
                </span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-400">
                  —
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if term_data[:in_database] %>
                <%= button_to term_data[:db_term]&.catalog_imported? ? "Re-import" : "Import",
                    admin_course_catalog_import_path(term_uid: term_data[:uid]),
                    method: :post,
                    class: "glass-button px-4 py-2 rounded text-sm",
                    data: { turbo_confirm: "Import courses for #{term_data[:description]}?" } %>
              <% else %>
                <%= button_to "Provision",
                    admin_course_catalog_provision_path(term_uid: term_data[:uid], description: term_data[:description]),
                    method: :post,
                    class: "px-4 py-2 rounded text-sm bg-yellow-500 hover:bg-yellow-600 text-white",
                    data: { turbo_confirm: "Create term #{term_data[:description]} in database?" } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-6 p-4 rounded-lg" style="background: rgba(59, 130, 246, 0.1); border: 1px solid rgba(59, 130, 246, 0.2);">
    <p class="text-sm text-blue-800">
      <strong>Note:</strong> Course imports run in the background and may take a few minutes.
      Check <%= link_to "Mission Control", admin_mission_control_jobs_path, class: "underline font-medium" %> for job status.
    </p>
  </div>
</div>
