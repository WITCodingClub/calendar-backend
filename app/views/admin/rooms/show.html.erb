<div class="container mx-auto px-2 pb-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold">Room <%= @room.number %></h1>
      <p class="text-gray-600 text-sm"><%= @room.building.name %> (<%= @room.building.abbreviation %>)</p>
    </div>
    <%= link_to "Back to Rooms", admin_rooms_path, class: "glass-button px-4 py-2 rounded text-sm cursor-pointer inline-block" %>
  </div>

  <!-- Courses by Term -->
  <div>
    <h2 class="text-xl font-semibold mb-4">Courses by Term</h2>
    <% if @courses_by_term.any? %>
      <% @courses_by_term.each do |term, courses| %>
        <div class="mb-6">
          <h3 class="text-lg font-medium mb-3 text-gray-800"><%= term.name %></h3>
          <div class="bg-white shadow-lg rounded-lg overflow-hidden" style="background: rgba(255, 255, 255, 0.6); backdrop-filter: blur(5px); -webkit-backdrop-filter: blur(5px); border: 1px solid rgba(209, 55, 50, 0.3);">
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead style="background: rgba(255, 255, 255, 0.5);">
                  <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">
                      Course
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">
                      Instructor
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">
                      Meeting Times
                    </th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200" style="background: rgba(255, 255, 255, 0.3);">
                  <% courses.each do |course| %>
                    <tr>
                      <td class="px-6 py-4">
                        <div class="text-sm text-gray-900 font-medium"><%= course.title %></div>
                        <div class="text-xs text-gray-600"><%= course.crn %></div>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                        <%= course.faculties.map(&:full_name).join(", ").presence || "TBA" %>
                      </td>
                      <td class="px-6 py-4 text-sm text-gray-700">
                        <% course.meeting_times.select { |mt| mt.room_id == @room.id }.each do |mt| %>
                          <div class="text-xs"><%= mt.day_of_week&.capitalize %>: <%= mt.formatted_time_range %></div>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-gray-600">No courses scheduled in this room.</p>
    <% end %>
  </div>
</div>
