<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold">Finals Schedules</h1>
  <% if policy(FinalsSchedule).create? %>
    <%= link_to "Upload Schedule", new_admin_finals_schedule_path, class: "glass-button px-6 py-2 rounded inline-flex items-center" %>
  <% end %>
</div>

<div class="glass-card shadow-lg rounded-lg overflow-hidden mb-4">
  <div class="px-6 py-4 bg-white/50">
    <%= form_with url: admin_finals_schedules_path, method: :get, class: "flex gap-4 items-center" do %>
      <div class="flex-1">
        <%= select_tag :term_id,
            options_from_collection_for_select(@terms, :id, :name, params[:term_id]),
            include_blank: "All Terms",
            class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-opacity-50",
            style: "background: rgba(255, 255, 255, 0.8);" %>
      </div>
      <%= button_tag "Filter", type: :submit, class: "glass-button px-6 py-2 rounded" %>
      <% if params[:term_id].present? %>
        <%= link_to "Clear", admin_finals_schedules_path, class: "text-sm text-[#d13732] hover:underline" %>
      <% end %>
    <% end %>
  </div>
</div>

<div class="glass-card shadow-lg rounded-lg overflow-hidden">
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-white/50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">
            Term
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">
            Status
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">
            Uploaded By
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">
            Uploaded At
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">
            Stats
          </th>
          <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-700 uppercase tracking-wider">
            Actions
          </th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200 bg-white/30">
        <% if @finals_schedules.any? %>
          <% @finals_schedules.each do |schedule| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900 font-medium">
                  <%= schedule.term.name %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= render "status_badge", status: schedule.status %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-700">
                  <%= schedule.uploaded_by.email %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                <%= schedule.created_at.strftime("%b %d, %Y %l:%M %p") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                <% if schedule.stats.present? %>
                  <span class="text-green-600"><%= schedule.stats["created"] || 0 %> created</span>,
                  <span class="text-blue-600"><%= schedule.stats["updated"] || 0 %> updated</span>,
                  <span class="text-gray-500"><%= schedule.stats["skipped"] || 0 %> skipped</span>
                <% else %>
                  â€”
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to "View", admin_finals_schedule_path(schedule), class: "text-sm font-medium text-[#d13732] hover:underline" %>
                <% if policy(schedule).destroy? %>
                  <%= button_to "Delete", admin_finals_schedule_path(schedule),
                      method: :delete,
                      data: { turbo_confirm: "Delete this finals schedule? This will NOT delete the associated final exams." },
                      class: "ml-3 text-sm font-medium text-[#d13732] hover:underline bg-transparent border-0 p-0 cursor-pointer" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="6" class="px-6 py-8 text-center text-sm text-gray-500">
              No finals schedules uploaded yet.
              <% if policy(FinalsSchedule).create? %>
                <%= link_to "Upload one now", new_admin_finals_schedule_path, class: "text-[#d13732] hover:underline" %>.
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @finals_schedules.respond_to?(:total_pages) && @finals_schedules.total_pages > 1 %>
    <div class="px-6 py-4 border-t border-gray-200 bg-white/40">
      <%= paginate @finals_schedules %>
    </div>
  <% end %>
</div>
