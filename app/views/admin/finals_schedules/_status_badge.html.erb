<%
  badge_classes = case status
                  when "pending"
                    "bg-yellow-100 text-yellow-800"
                  when "processing"
                    "bg-blue-100 text-blue-800"
                  when "completed"
                    "bg-green-100 text-green-800"
                  when "failed"
                    "bg-red-100 text-red-800"
                  else
                    "bg-gray-100 text-gray-800"
                  end
%>
<span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full <%= badge_classes %>">
  <%= status.titleize %>
</span>
