<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Admin Dashboard</h1>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <!-- Stats Cards -->
    <div class="bg-white overflow-hidden shadow-lg rounded-lg" style="background: rgba(255, 255, 255, 0.6); backdrop-filter: blur(5px); -webkit-backdrop-filter: blur(5px); border: 1px solid rgba(209, 55, 50, 0.3);">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="text-lg font-medium text-gray-700">Total Users</div>
          </div>
        </div>
        <div class="mt-1 text-3xl font-semibold" style="color: #d13732;">
          <%= @users_count %>
        </div>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow-lg rounded-lg" style="background: rgba(255, 255, 255, 0.6); backdrop-filter: blur(5px); -webkit-backdrop-filter: blur(5px); border: 1px solid rgba(209, 55, 50, 0.3);">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="text-lg font-medium text-gray-700">Admins</div>
          </div>
        </div>
        <div class="mt-1 text-3xl font-semibold" style="color: #d13732;">
          <%= @admin_count %>
        </div>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow-lg rounded-lg" style="background: rgba(255, 255, 255, 0.6); backdrop-filter: blur(5px); -webkit-backdrop-filter: blur(5px); border: 1px solid rgba(209, 55, 50, 0.3);">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="text-lg font-medium text-gray-700">Active Sessions</div>
          </div>
        </div>
        <div class="mt-1 text-3xl font-semibold" style="color: #d13732;">
          <%= @active_sessions_count %>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="bg-white shadow-lg rounded-lg" style="background: rgba(255, 255, 255, 0.6); backdrop-filter: blur(5px); -webkit-backdrop-filter: blur(5px); border: 1px solid rgba(209, 55, 50, 0.3);">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium mb-4">Quick Actions</h3>
      <div class="space-y-2">
        <%= link_to "Manage Users", admin_users_path,
            class: "quick-action-link block w-full text-left px-4 py-2 text-sm font-medium rounded transition-colors",
            style: "color: #d13732;" %>
        <%= link_to "Query Database Data", '/admin/blazer',
            class: "quick-action-link block w-full text-left px-4 py-2 text-sm font-medium rounded transition-colors",
            style: "color: #d13732;" %>
        <% if @current_user.super_admin? || @current_user.owner? %>
          <%= link_to "Feature Flags", '/admin/flipper',
              class: "quick-action-link block w-full text-left px-4 py-2 text-sm font-medium rounded transition-colors",
              style: "color: #d13732;" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
  .quick-action-link:hover {
    background: rgba(209, 55, 50, 0.1) !important;
  }
</style>
