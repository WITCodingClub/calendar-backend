<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold">Beta Testers</h1>
  <%= link_to "Add Beta Tester", new_admin_beta_tester_path, class: "glass-button px-6 py-2 rounded inline-flex items-center" %>
</div>

<div class="glass-card shadow-lg rounded-lg overflow-hidden mb-4">
  <div class="px-6 py-4 bg-white/50">
    <p class="text-sm text-gray-700">
      Beta testers have access to the API endpoints. Users can also be managed through the
      <%= link_to "Flipper UI", "/admin/flipper", class: "text-[#d13732] hover:underline" %>
      by enabling the <code class="px-1 py-0.5 bg-gray-100 rounded text-xs"><%= FlipperFlags::V1 %></code> feature for specific actors.
    </p>
  </div>
</div>

<div class="glass-card shadow-lg rounded-lg overflow-hidden">
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-white/50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">
            Email
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">
            Name
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">
            Access Level
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">
            Added
          </th>
          <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-700 uppercase tracking-wider">
            Actions
          </th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200 bg-white/30">
        <% if @beta_testers.any? %>
          <% @beta_testers.each do |user| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900 font-medium">
                  <%= user.email %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-700">
                  <%= user.full_name.presence || "â€”" %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-[#d13732]/10 text-[#d13732]">
                  <%= user.access_level_text %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                <%= user.created_at.strftime("%b %d, %Y") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to "View User", admin_user_path(user), class: "text-sm font-medium text-[#d13732] hover:underline" %>
                <%= button_to "Remove Access", admin_beta_tester_path(user), method: :delete, data: { turbo_confirm: "Remove beta tester access for #{user.email}? This will revoke their API access." }, class: "ml-3 text-sm font-medium text-[#d13732] hover:underline bg-transparent border-0 p-0 cursor-pointer" %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="5" class="px-6 py-8 text-center text-sm text-gray-500">
              No beta testers yet. Add one using the button above.
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @beta_testers.respond_to?(:total_pages) %>
    <div class="px-6 py-4 border-t border-gray-200 bg-white/40">
      <%= paginate @beta_testers %>
    </div>
  <% end %>
</div>
