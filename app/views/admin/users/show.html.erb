<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold">User Details</h1>
  <%= link_to "Back to Users", admin_users_path, class: "glass-button px-4 py-2 rounded text-sm cursor-pointer inline-block" %>
</div>

  <div class="glass-card shadow-lg rounded-lg overflow-hidden">
    <div class="px-6 py-5">
      <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
        <div>
          <dt class="text-sm font-medium text-gray-500">First Name</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @user.first_name %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Last Name</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @user.last_name %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Email</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @user.email %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Access Level</dt>
          <dd class="mt-1">
            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-[#d13732]/10 text-[#d13732]">
              <%= @user.access_level_text %>
            </span>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Beta Tester</dt>
          <dd class="mt-1">
            <% beta_feature_flag = FlipperFlags::V1 %>
            <% is_beta_tester = Flipper.enabled?(beta_feature_flag, @user) %>
            <% if is_beta_tester %>
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                Yes
              </span>
            <% else %>
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                No
              </span>
            <% end %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Created At</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @user.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Updated At</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @user.updated_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
        </div>
      </dl>

      <div class="mt-6 flex gap-3 flex-wrap">
        <%= link_to "Edit User", edit_admin_user_path(@user), class: "glass-button px-4 py-2 rounded text-sm cursor-pointer inline-block" %>

        <% beta_feature_flag = FlipperFlags::V1 %>
        <% is_beta_tester = Flipper.enabled?(beta_feature_flag, @user) %>

        <% if is_beta_tester %>
          <%= button_to "Remove from Beta", disable_beta_admin_user_path(@user),
            method: :delete,
            data: { confirm: "Remove #{@user.email} from beta testers?" },
            class: "glass-button px-4 py-2 rounded text-sm cursor-pointer bg-red-50/40 text-red-600" %>
        <% else %>
          <%= button_to "Add to Beta", enable_beta_admin_user_path(@user),
            method: :post,
            class: "glass-button px-4 py-2 rounded text-sm cursor-pointer bg-green-50/40 text-green-600" %>
        <% end %>

        <%= button_to "Delete User", admin_user_path(@user), method: :delete, data: { confirm: "Are you sure you want to delete this user?" }, class: "glass-button px-4 py-2 rounded text-sm cursor-pointer" %>
      </div>
    </div>
  </div>

  <!-- Enrollments Section -->
  <div class="mt-8 glass-card shadow-lg rounded-lg overflow-hidden">
    <div class="px-6 py-5">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-bold">Enrollments</h2>
        <span class="text-sm text-gray-600">Total: <%= @user.enrollments.count %></span>
      </div>

      <% if @user.enrollments.any? %>
        <div class="space-y-4">
          <% @enrollments_by_term.each do |term, enrollments| %>
            <div class="mb-6">
              <h3 class="text-lg font-semibold mb-3 text-[#d13732]"><%= term.name %></h3>
              <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                  <thead class="bg-white/50">
                    <tr>
                      <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">CRN</th>
                      <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Course</th>
                      <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Title</th>
                      <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Type</th>
                      <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Credits</th>
                    </tr>
                  </thead>
                  <tbody class="divide-y divide-gray-200 bg-white/30">
                    <% enrollments.each do |enrollment| %>
                      <tr>
                        <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900">
                          <%= enrollment.course.crn %>
                        </td>
                        <td class="px-4 py-2 whitespace-nowrap text-sm font-medium text-gray-900">
                          <%= enrollment.course.subject %> <%= enrollment.course.course_number %>
                        </td>
                        <td class="px-4 py-2 text-sm text-gray-900">
                          <%= enrollment.course.title %>
                        </td>
                        <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-700">
                          <%= enrollment.course.schedule_type %>
                        </td>
                        <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-700">
                          <%= enrollment.course.credit_hours %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-600">No enrollments found for this user.</p>
      <% end %>
    </div>
  </div>

  <!-- OAuth Credentials Section -->
  <div class="mt-8 glass-card shadow-lg rounded-lg overflow-hidden">
    <div class="px-6 py-5">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-bold">OAuth Credentials</h2>
        <span class="text-sm text-gray-600">Total: <%= @oauth_credentials.size %></span>
      </div>

      <% if @oauth_credentials.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-white/50">
              <tr>
                <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Email</th>
                <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Provider</th>
                <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Status</th>
                <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Calendar</th>
                <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Created</th>
                <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white/30">
              <% @oauth_credentials.each do |credential| %>
                <tr>
                  <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900">
                    <%= credential.email %>
                  </td>
                  <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-700">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                      <%= credential.provider.capitalize %>
                    </span>
                  </td>
                  <td class="px-4 py-2 whitespace-nowrap text-sm">
                    <% if credential.token_expired? %>
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                        Expired
                      </span>
                    <% else %>
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                        Active
                      </span>
                    <% end %>
                  </td>
                  <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-700">
                    <% if credential.google_calendar %>
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-[#d13732]/10 text-[#d13732]">
                        <%= credential.events_count %> events
                      </span>
                    <% else %>
                      <span class="text-gray-400">None</span>
                    <% end %>
                  </td>
                  <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-700">
                    <%= credential.created_at.strftime("%b %d, %Y") %>
                  </td>
                  <td class="px-4 py-2 whitespace-nowrap text-sm">
                    <%= button_to "Revoke", revoke_oauth_credential_admin_user_path(@user, credential_id: credential.id),
                      method: :delete,
                      data: { confirm: "Are you sure you want to revoke OAuth access for #{credential.email}? This will also delete any associated calendar and events." },
                      class: "text-red-600 hover:text-red-900 font-medium" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-gray-600">No OAuth credentials found for this user.</p>
      <% end %>
    </div>
  </div>
