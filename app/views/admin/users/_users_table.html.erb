<%= turbo_frame_tag "users_table" do %>
  <div class="glass-card shadow-lg rounded-lg overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-white/50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">
              Email
            </th>
            <% if policy(User).view_access_level? %>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">
                Access Level
              </th>
            <% end %>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">
              Created
            </th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-700 uppercase tracking-wider">
              Actions
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 bg-white/30">
          <% @users.each do |user| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900 font-medium">
                  <%= user.email %>
                </div>
              </td>
              <% if policy(User).view_access_level? %>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-[#d13732]/10 text-[#d13732]">
                    <%= user.access_level_text %>
                  </span>
                </td>
              <% end %>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                <%= user.created_at.strftime("%b %d, %Y") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <% if policy(user).show? %>
                  <%= link_to "View", admin_user_path(user), data: { turbo_frame: "_top" }, class: "text-sm font-medium text-[#d13732] hover:underline" %>
                <% end %>
                <% if policy(user).edit? %>
                  <%= link_to "Edit", edit_admin_user_path(user), data: { turbo_frame: "_top" }, class: "ml-3 text-sm font-medium text-[#d13732] hover:underline" %>
                <% end %>
                <% if policy(user).destroy? %>
                  <span class="ml-3 inline-block">
                    <%= render "delete_confirmation_modal",
                        user: user,
                        button_text: "Delete",
                        button_class: "text-sm font-medium text-[#d13732] hover:underline bg-transparent border-0 p-0 cursor-pointer" %>
                  </span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <% if @users.respond_to?(:total_pages) %>
      <div class="px-6 py-4 border-t border-gray-200 bg-white/40">
        <%= paginate @users %>
      </div>
    <% end %>
  </div>
<% end %>
