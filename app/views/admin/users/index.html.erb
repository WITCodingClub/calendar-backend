<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold">Users</h1>
</div>

  <!-- Search Bar -->
  <div class="mb-4">
    <%= form_with(url: admin_users_path, method: :get, data: { turbo_frame: "users_table", turbo_action: "advance", controller: "users-search" }, class: "flex gap-2") do |f| %>
      <%= f.text_field :search,
          value: params[:search],
          placeholder: "Search by ID, email, or name...",
          class: "glass-input flex-1 px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-opacity-50",
          data: { action: "input->users-search#search" } %>
      <% if params[:search].present? %>
        <%= link_to "Clear", admin_users_path, data: { turbo_frame: "users_table" }, class: "glass-button px-6 py-2 rounded inline-flex items-center" %>
      <% end %>
    <% end %>
  </div>

<%= render "users_table" %>
