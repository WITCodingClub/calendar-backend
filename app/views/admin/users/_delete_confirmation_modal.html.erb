<%
# Delete confirmation modal for destructive user actions
# Requires type-to-confirm pattern for extra safety
#
# Parameters:
#   user: User object to delete
#   button_text: (optional) Text for the delete button (default: "Delete")
#   button_class: (optional) CSS classes for the delete button
%>

<% button_text ||= "Delete" %>
<% button_class ||= "glass-button px-4 py-2 rounded text-sm cursor-pointer bg-red-600 text-white" %>

<div data-controller="delete-confirmation"
     data-delete-confirmation-confirm-text-value="<%= user.email %>"
     data-delete-confirmation-item-type-value="user">

  <!-- Hidden Modal (shown when triggered) -->
  <div data-delete-confirmation-target="modal"
       data-action="click->delete-confirmation#closeOnBackdrop"
       class="hidden fixed inset-0 z-50 overflow-y-auto"
       style="background-color: rgba(0, 0, 0, 0.5);">

    <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:block sm:p-0">
      <!-- Modal Panel -->
      <div class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6"
           style="background: rgba(255, 255, 255, 0.95); backdrop-filter: blur(10px); -webkit-backdrop-filter: blur(10px);">

        <!-- Warning Icon -->
        <div class="sm:flex sm:items-start">
          <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-red-100 sm:mx-0 sm:h-10 sm:w-10">
            <svg class="h-6 w-6 text-red-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </div>

          <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left flex-1">
            <!-- Title -->
            <h3 class="text-lg leading-6 font-medium text-gray-900">
              Delete User Account
            </h3>

            <!-- Warning Message -->
            <div class="mt-2">
              <p class="text-sm text-gray-600 mb-3">
                You are about to permanently delete the account for:
              </p>
              <p class="text-sm font-bold text-gray-900 mb-3 p-2 bg-gray-100 rounded">
                <%= user.email %>
              </p>
              <p class="text-sm text-red-600 font-semibold mb-3">
                ⚠️ This action will delete:
              </p>
              <ul class="text-sm text-gray-600 mb-4 ml-4 space-y-1">
                <li>• All enrollments and course data</li>
                <li>• All OAuth credentials and tokens</li>
                <li>• All Google Calendar integrations</li>
                <li>• All calendar events (<%= user.enrollments.count %> enrollments)</li>
              </ul>
              <p class="text-sm text-red-700 font-bold mb-4">
                This action cannot be undone.
              </p>

              <!-- Type-to-confirm Input -->
              <div class="mb-2">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  Type <code class="bg-gray-100 px-1 py-0.5 rounded text-xs"><%= user.email %></code> to confirm:
                </label>
                <%= text_field_tag "confirm_email", nil,
                    data: {
                      delete_confirmation_target: "input",
                      action: "input->delete-confirmation#checkInput"
                    },
                    placeholder: "Type email to confirm",
                    autocomplete: "off",
                    class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 text-sm" %>
              </div>

              <!-- Error Message -->
              <div data-delete-confirmation-target="errorMessage"
                   class="hidden text-sm text-red-600 mt-2 p-2 bg-red-50 rounded">
              </div>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse gap-2">
          <%= button_tag "Delete User",
              type: "button",
              data: {
                delete_confirmation_target: "confirmButton",
                action: "click->delete-confirmation#confirm"
              },
              disabled: true,
              class: "w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:ml-3 sm:w-auto sm:text-sm opacity-50 cursor-not-allowed" %>

          <%= button_tag "Cancel",
              type: "button",
              data: { action: "click->delete-confirmation#hide" },
              class: "mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#d13732] sm:mt-0 sm:w-auto sm:text-sm cursor-pointer" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Hidden Form (submitted by controller) -->
  <%= form_with(url: admin_user_path(user), method: :delete, data: { turbo_frame: "_top" }) do |f| %>
    <!-- Form will be submitted programmatically by the controller -->
  <% end %>

  <!-- Delete Button (triggers modal) -->
  <%= button_tag button_text,
      type: "button",
      data: { action: "click->delete-confirmation#show" },
      class: button_class %>
</div>
